# Porta do servidor
PORT=3001

# Configurações do PostgreSQL
DB_HOST=seu-servidor.postgres.database.azure.com
DB_PORT=5432
DB_USER=seu_usuario
DB_PASS=sua_senha_segura
DB_NAME=postgres
DB_SSL=true_ou_false

# Configuração do serviço de email (Resend)
RESEND_API_KEY=re_sua_chave_api_aqui
EMAIL_FROM=Seu Nome <seu-email@seudominio.com>

# Provider de vendas: 'mock' ou 'api'
SALES_PROVIDER=mock

# URL base da API real D1FITNESS
SALES_API_BASE_URL=https://d1-teste-dev-fullstack.morefocus.com.br

# Fallback automático para mock em caso de erro na API real
SALES_FALLBACK_TO_MOCK=false

# URLs da API mock local (usadas quando SALES_PROVIDER=mock)
API_VENDAS_URL=http://localhost:3000/vendas
API_NOTAS_FISCAIS_URL=http://localhost:3000/notas-fiscais

